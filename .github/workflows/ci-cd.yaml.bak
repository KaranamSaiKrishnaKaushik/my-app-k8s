name: CI/CD Pipeline

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout Repo
      uses: actions/checkout@v3

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3

    - name: Log in to Docker Hub
      uses: docker/login-action@v3
      with:
        username: dokkaushik
        password: Iamthebest
    - name: Debug - Show Files
      run: |
        pwd
        ls -R

    - name: Build and Push Frontend
      run: |
        docker build -t dokkaushik/my-angular-app ./my-angular-app
        docker push dokkaushik/my-angular-app

    - name: Build and Push Backend
      run: |
        docker build -t dokkaushik/mock ./mock
        docker push dokkaushik/mock
        
    - name: Update image tag in deployment YAML
      run: |
            sed -i "s|dokkaushik/my-angular-app:latest:.*|dokkaushik/my-angular-app:latest:${{ github.sha }}|" k8s/dev/api-deployment.yaml
            
    - name: Commit updated YAML
      run: |
            git config --global user.email "karanamsaikrishna.kaushik@gmail.com"
            git config --global user.name "Kaushik Karanam"
            git commit -am "Update image tag to ${{ github.sha }}"
            git push